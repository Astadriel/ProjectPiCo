var degen = 4 #for debug purposes

# class member variables go here, for example:
# var a = 2
# var b = \"textvar\"

func _ready():
	pass

func _process(delta):
	hp -= degen*delta #for debug purposes
	if ini == true:
		get_node(\"Sp_slime_blue\").visible = false
		if type == \"slime\":
			if color == \"blue\":
				get_node(\"Sp_slime_blue\").visible = true
			elif color == \"red\":
				get_node(\"Sp_slime_red\").visible = true
			else:
				print(\"no corresponding sprite\")
		
		ini = false
	# Called every frame. Delta is time since last frame.
	# movement along the path
	set_offset(get_offset()+delta*speed)
	
	# Destroy if hp < 1
	if hp < 1:
		get_tree().get_root().get_node(\"World\").enemy_dead += 1
		print(\"Enemy killed\")
		print(get_tree().get_root().get_node(\"World\").enemy_dead )
		#add ressource
		get_tree().get_root().get_node(\"World\").ressource += ressource
		queue_free()
	pass



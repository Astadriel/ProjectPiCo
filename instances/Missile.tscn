var damage = 20
var lifetime = 0.3
var initialize = true
var color = \"blue\"
var speed = 100
var velocity = Vector2(0,speed)

#func _ready():
#	pass

func _process(delta):
	
	if initialize == true:
		if color == \"blue\":
			get_node(\"Sp_missile_blue\").visible = true
		else:
			get_node(\"Sp_missile_red\").visible = true
		initialize = false
		
	
	global_position.x += velocity.x * delta
	global_position.y += velocity.y * delta
	
	lifetime -= delta
	if lifetime < 0 :
		queue_free()
		pass


func _on_Missile_area_entered(other):
	print(\"debug\")
	if other.is_in_group(\"enemy\"):
		if other.color == color:
			#deal damage
			other.hp -= damage
			print(\"hit\")
			#destroy self
			queue_free()
"


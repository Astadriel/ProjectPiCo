func _process(delta):
	get_node(\"Sp_missile_blue\").visible = false
	if initialize == true:
		if color == \"blue\":
			get_node(\"Sp_missile_blue\").visible = true
		else:
			get_node(\"Sp_missile_red\").visible = true
		initialize = false
		
	lifetime -= delta
	if lifetime < 0 :
		queue_free()


func _on_Missile_area_entered(other):
	if other.is_in_group(\"enemy\"):
		if other.color == color:
			#deal damage
			other.hp -= damage
			#destroy self
			queue_free()
"

